---
import img1 from "../assets/website_announcement.png";
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Fallen Oaks Equine Rescue | About">
  <div
    class="bg-[#fefce8] min-h-[calc(100vh-10rem)] flex flex-col items-center"
  >
    <div
      class="flex flex-col justify-center items-center w-full lg:w-2/5 pt-32 pb-8 lg:pb-16 gap-y-24"
    >
      <div class="text-7xl uppercase font-semibold tracking-wide">Credits</div>
      <div class="relative flex items-center justify-center max-h-40 w-1/3">
        <Image
          src={img1}
          alt=""
          style="filter: drop-shadow(0 5px 5px #000)"
          class="max-h-64 w-auto sm:max-h-auto sm:h-64 lg:max-w-lg mx-auto z-0 rounded-lg -rotate-3 bg-neutral-400 border-white border-8"
        />
      </div>
      <div class="text-base lg:text-xl">
        
      </div>
    </div>
    <hr class="border-neutral-400 border-1 w-1/2 pb-16" />
  </div>
</Layout>
