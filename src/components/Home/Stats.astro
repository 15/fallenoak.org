---
import img1 from "../../assets/FOER_OC_Gorebox.png";
import img2 from "../../assets/fallen_oak_auction.png";
import { Image } from "astro:assets";
import Button from "../Button.astro";
---

<section
  class="relative flex flex-col items-center justify-center py-48"
  style="background-image: linear-gradient(to top, #fefce8 0%, #fefce8 30%);"
>
  <div
    class="rounded-xl shadow-2xl border-8 border-black p-8 bg-blue-50 mx-auto grid justify-center grid-cols-2 text-center lg:grid-cols-3 gap-16"
  >
    <div class="flex flex-col justify-start">
      <p class="text-4xl font-bold leading-none lg:text-8xl">24+</p>
      <p class="text-sm sm:text-2xl">Years of Rescue</p>
    </div>
    <div class="flex flex-col justify-start">
      <p class="text-4xl font-bold leading-none lg:text-8xl">850+</p>
      <p class="text-sm sm:text-2xl">Rescued Horses</p>
    </div>
    <div class="flex flex-col justify-start">
      <p class="text-4xl font-bold leading-none lg:text-8xl">30+</p>
      <p class="text-sm sm:text-2xl">Volunteers</p>
    </div>
    <div class="flex flex-col justify-start">
      <p class="text-4xl font-bold leading-none lg:text-8xl">$9,999</p>
      <p class="text-sm sm:text-2xl">Donated to Horses</p>
    </div>
    <div class="flex flex-col justify-start">
      <p class="text-4xl font-bold leading-none lg:text-8xl">22</p>
      <p class="text-sm sm:text-2xl">Permanent Residents</p>
    </div>
    <div class="flex flex-col justify-start">
      <p class="text-4xl font-bold leading-none lg:text-8xl">99</p>
      <p class="text-sm sm:text-2xl">Sponsors</p>
    </div>
  </div>
</section>
