<style>
  @media (min-width: 1024px) {
    .desktop-gradients {
      background-image: linear-gradient(to top, #fefce8 5%, transparent 20%),
        linear-gradient(to right, #fefce8 40%, transparent 70%),
        url("/P1010228.jpg");
      background-size:
        100% 100%,
        cover;
    }
  }

  @media (max-width: 1024px) {
    .desktop-gradients {
      @apply bg-yellow-50;
      background-size:
        100% 100%,
