---
import img1 from "../../assets/news/Semi_atnewhome_1.jpg";
import { Image } from "astro:assets";
const { author, title, content, img, date, id } = Astro.props;
---

<a
  class="duration-300 cursor-pointer max-w-xs p-6 rounded-md border-2 border-black bg-white hover:bg-amber-100 hover:text-black"
  href={`/news/${id}`}
>
  <Image
  transition:name="1"
    src={img1}
    alt=""
    height="300"
    class="object-cover object-center w-full rounded-md h-72 bg-gray-500"
  />
  <div class="mt-6 mb-2">
    <span class="block text-xs font-bold tracking-widest uppercase">{date}</span
    >
    <h2 class="text-xl font-semibold tracking-wide">{title}</h2>
  </div>
  <p class="text-sm line-clamp-4">
    {content}
  </p>

  <div class="flex justify-center mt-4">
    <div
      class="px-2 py-1 lg:text-sm lg:px-3 lg:py-1 button button--news border-2 border-black"
    >
      <span>Read more</span>
    </div>
  </div>
</a>

<style>
  .button {
    pointer-events: auto;
    cursor: pointer;
    background: #000;
    /* border: none; */
    font-size: inherit;
    position: relative;
    display: inline-block;
  }

  .button::before,
  .button::after {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  .button--news {
    text-transform: uppercase;
    @apply lg:text-sm text-sm font-semibold tracking-wider;
    border-radius: 0.5rem;
    overflow: hidden;
    color: #fff;
    background: #fefce8;
  }

  .button--news span {
    position: relative;
    mix-blend-mode: difference;
  }

  .button--news::before {
    content: "";
    background: #000;
    width: 120%;
    left: -10%;
    transform: skew(30deg);
    transition: transform 0.8s cubic-bezier(0.3, 1, 0.8, 1);
  }

  .button--news:hover::before {
    transform: translate3d(100%, 0, 0);
  }
</style>
