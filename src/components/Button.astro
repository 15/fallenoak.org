---
const { href, text } = Astro.props;
---

<a href={href} class="px-4 py-2 lg:text-xl lg:px-6 lg:py-2 button button--mimas border-2 border-black"
  ><span>{text}</span></a
>
<style>
  .button {
    pointer-events: auto;
    cursor: pointer;
    background: #fefce8;
    /* border: none; */
    font-size: inherit;
    position: relative;
    display: inline-block;
  }

  .button::before,
  .button::after {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  .button--mimas {
    text-transform: uppercase;
    @apply lg:text-2xl text-xl font-bold tracking-wider;
    border-radius: 0.5rem;
    overflow: hidden;
    color: #fff;
    background: #fefce8;
  }

  .button--mimas span {
    position: relative;
    mix-blend-mode: difference;
  }

  .button--mimas::before {
    content: "";
    background: #000;
    width: 120%;
    left: -10%;
    transform: skew(30deg);
    transition: transform 0.8s cubic-bezier(0.3, 1, 0.8, 1);
  }

  .button--mimas:hover::before {
    transform: translate3d(100%, 0, 0);
  }
</style>
